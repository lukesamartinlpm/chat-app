{{>head}}
</head>
<body>

<div class="chat">
    <div class="chat__sidebar" id='sidebar'>

    </div>
    
     <div class="chat__main">
   {{!-- RENDER MESSAGE --}}
   <div class="msgChat chat__messages">
    </div>
   
 <!--MESSAGES-->
 <div class="compose">
     <form id='msgForm'>
         <input type="text" name='message' class='message' placeholder="message" required autocomplete="off">
         <button class='sendMsg'>SEND</button>
     </form>

    <!--SEND LOCATION -->
     <button class='location'>Send Location</button>

</div>
  </div>
</div>

 {{!-- TEMPLATES --}}
    <script id="msgTemplate" type='text/html'>
        <div class="message">
         <p>
           <span class="message__name">\{{username}}</span>
           <span class="message__meta">\{{timeLocation}} \{{time}}</span>
         </p>
         <p>\{{message}}</p>
        <a href="\{{url}}" target="_blank"> \{{location}}</a>
      </div>
       </script>
{{!--sidebar --}}
<script id="sidebarTemplate" type='text/html'>
        <h2 class='room-title'>\{{room}}</h2>
         <h3 class='list-title'>Users</h3>
         <ul class='users'>
           \{{#users}}
           <li>\{{username}}</li>
           \{{/users}}
     </ul>
</script>
     

{{!-- MOMENTJS --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

{{!-- qs --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>

{{!-- IO --}}
<script src='socket.io/socket.io.js'></script>
<script src='js/io.js'></script>
</body>
</html>